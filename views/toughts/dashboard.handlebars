<div class="dashboard">
  <div class="title-container">
    <h2>Pensamentos</h2>
    <a href="/toughts/add" class="btn">Criar pensamento</a>
  </div>
  <h3>Seus pensamentos</h3>
  <ul>
    {{#each toughts}}
      <li>
        <span class="label">{{title}}</span>
        <span class="actions">
          <a href="/" class="btn">Editar</a>
          <form action="/toughts/remove" method="post">
            <input type="hidden" name="id" value="{{id}}" />
            <input type="submit" value="Excluir" class="btn" />
          </form>
        </span>
      </li>
    {{/each}}
  </ul>
</div>